<div class="row">
  <div class="span12">
    <%= form_for @photo, :html => {:multipart => true} do |f| %>
      <% if @photo.errors.any? %>
        <div class="alert alert-error">
          <h3><%= pluralize(@photo.errors.count, "error") %> was found:</h3>

          <ul>
          <% @photo.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= image_tag @photo.img.url(:medium) if @photo.has_img? %>
      <fieldset>
        <%= control_group(@photo, :img) %>
          <%= f.file_field :img %>
        </div>
      </fieldset>
      <button type="submit" class="btn btn-primary btn-large pull-right" data-loading-text="Saving ..." autocomplete="off">Save</button>
    <% end %>
  </div>
</div>
